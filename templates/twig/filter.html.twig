{% set livres = [
    {'titre': '1984', 'auteur': 'George Orwell'},
    {'titre': 'Le Meilleur des mondes', 'auteur': 'Aldous Huxley'},
    {'titre': 'Fahrenheit 451', 'auteur': 'Ray Bradbury'},
    {'titre': 'Animal Farm', 'auteur': 'George Orwell'}
] %}

{% set livresOrwell = livres | filter(livre => livre.auteur == 'George Orwell') %}

{# Après l'application du filtre, livresOrwell contiendra :
   [
     {'titre': '1984', 'auteur': 'George Orwell'},
     {'titre': 'Animal Farm', 'auteur': 'George Orwell'}
   ]
#}

{% for livre in livresOrwell %}
    - {{ livre.titre }} par {{ livre.auteur }}
{% endfor %}


{% set livres = [
    {'titre': '1984', 'auteur': 'George Orwell'},
